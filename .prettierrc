{
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.(js|ts|tsx|jsx)",
      "options": {
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true
      }
    },
    {
      "files": "*.(yaml|yml)",
      "options": {
        "parser": "yaml",
        "printWidth": 250,
        "singleQuote": true
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json"
      }
    }
  ]
}
