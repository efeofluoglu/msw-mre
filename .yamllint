extends: default

# Ignore Helm templates
# Ignore autogenerated Terraform docs
# Ignore Kube certificate files
ignore: |
  files/**/*
  deploy/**/*

rules:
  indentation:
    spaces: consistent
    indent-sequences: consistent
  line-length:
    max: 250
    allow-non-breakable-inline-mappings: true
  document-start:
    present: false
